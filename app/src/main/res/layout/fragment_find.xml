<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        >
        <include layout="@layout/include_title" />


            <RelativeLayout
                android:id="@+id/RichScan_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/app_while_tv_bg">

                <ImageView
                    android:id="@+id/RichScan_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/interval_left"
                    android:src="@mipmap/scan_my" />

                <TextView
                    android:id="@+id/RichScan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/RichScan_img"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="扫一扫"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/interval_right"
                    android:background="@mipmap/hsjt" />

            </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/wire"
            android:background="@color/halving_line_vertical"
            android:layout_marginLeft="@dimen/interval_left"/>

            <RelativeLayout
                android:id="@+id/Share_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/app_while_tv_bg">

                <ImageView
                    android:id="@+id/Share_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/interval_left"
                    android:src="@mipmap/share_my" />

                <TextView
                    android:id="@+id/Share_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/Share_img"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="推荐分享"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/interval_right"
                    android:background="@mipmap/hsjt" />

            </RelativeLayout>
        </LinearLayout>

</RelativeLayout>