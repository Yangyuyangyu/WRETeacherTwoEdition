<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <include layout="@layout/include_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:padding="@dimen/interval_left"
            >
            <com.teacherhelp.view.RoundImageView
                android:id="@+id/mine_img_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                />

            <LinearLayout
                android:id="@+id/mine_ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/mine_img_head"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/mine_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size3"
                    android:textColor="@color/black"
                    android:text="隔壁老王"
                    />

                <TextView
                    android:id="@+id/mine_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/text_size2"
                    android:text="请填写个性签名"
                    android:textColor="@color/gray_hint"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/mine_rl_ziliao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/app_while_tv_bg"
                android:paddingLeft="@dimen/interval_left"
                android:paddingRight="@dimen/interval_right"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >
                <ImageView
                    android:id="@+id/mine_img_ziliao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/mine_tv_ziliao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_img_ziliao"
                    android:layout_toLeftOf="@+id/mine_img_ziliaojiantou"
                    android:minHeight="40dp"
                    android:layout_centerVertical="true"
                    android:text="我的名片"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size3"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/mine_img_ziliaojiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/hsjt"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"
                />
            <RelativeLayout
                android:id="@+id/mine_rl_education"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/interval_left"
                android:paddingRight="@dimen/interval_right"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/app_while_tv_bg"
                android:paddingBottom="5dp"
                >
                <ImageView
                    android:id="@+id/mine_img_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/mine_tv_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_img_education"
                    android:layout_toLeftOf="@+id/mine_img_educationjiantou"
                    android:minHeight="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="我的机构"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size3"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/mine_img_educationjiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/hsjt"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"
                />
            <RelativeLayout
                android:id="@+id/mine_rl_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/interval_left"
                android:paddingRight="@dimen/interval_right"
                android:background="@drawable/app_while_tv_bg"
                android:paddingBottom="5dp"
                >
                <ImageView
                    android:id="@+id/mine_img_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/mine_tv_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_img_share"
                    android:layout_toLeftOf="@+id/mine_img_sharejiantou"
                    android:minHeight="40dp"
                    android:layout_centerVertical="true"
                    android:text="我的收入"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size3"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/mine_img_sharejiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/hsjt"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_ll_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/interval_left"
            android:paddingRight="@dimen/interval_right"
            android:background="@drawable/app_while_tv_bg">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/mine_img_approve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/mine_tv_approve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_img_approve"
                    android:layout_toLeftOf="@+id/mine_img_approvehsjt"
                    android:minHeight="40dp"
                    android:layout_centerVertical="true"
                    android:text="认证设置"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size3"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/mine_img_approvehsjt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/hsjt"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/mine_ll_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/interval_left"
            android:paddingRight="@dimen/interval_right"
            android:background="@drawable/app_while_tv_bg">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/mine_img_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/mine_tv_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_img_setting"
                    android:layout_toLeftOf="@+id/mine_img_settingjiantou"
                    android:minHeight="40dp"
                    android:layout_centerVertical="true"
                    android:text="设置"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size3"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/mine_img_settingjiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/hsjt"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>