<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@mipmap/modify_teach_age_icon_sub_sel"/>

        <TextView
            android:id="@+id/et_content"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@drawable/teachyear_et_bg"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size3"
            android:text="0"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/modify_teach_age_icon_add_nor"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textSize="@dimen/text_size3"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"
        android:layout_marginLeft="@dimen/interval_left"
        android:layout_marginRight="@dimen/interval_right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_hint"
        android:textSize="@dimen/text_size2"
        android:text="请如实输入您的教学年份。"
        android:layout_marginLeft="@dimen/interval_left"
        android:layout_marginTop="10dp"/>
</LinearLayout>