<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background">

        <include layout="@layout/include_title"/>

        <RelativeLayout
            android:id="@+id/setting_rl_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_while_tv_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改登录密码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size3"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/interval_left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/hsjt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/interval_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_rl_nocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_while_tv_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新消息通知"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size3"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/interval_left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/hsjt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/interval_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_while_tv_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size3"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/interval_left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/hsjt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/interval_right"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/wire"
            android:background="@color/halving_line_vertical"
            android:layout_marginLeft="@dimen/interval_left"/>

        <RelativeLayout
            android:id="@+id/setting_rl_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_while_tv_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服电话"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size3"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/interval_left"/>

            <ImageView
                android:id="@+id/setting_img_hsjt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/hsjt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/interval_right"/>

            <TextView
                android:id="@+id/setting_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15982407336"
                android:textColor="@color/gray_hint"
                android:textSize="@dimen/text_size3"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/setting_img_hsjt"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/setting_rl_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_while_tv_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助指南"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size3"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/interval_left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/hsjt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/interval_right"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/wire"
            android:background="@color/halving_line_vertical"
            android:layout_marginLeft="@dimen/interval_left"/>

        <RelativeLayout
            android:id="@+id/setting_rl_aboutus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_while_tv_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size3"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/interval_left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/hsjt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/interval_right"/>
        </RelativeLayout>


        <Button
            android:id="@+id/setting_btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size3"
            android:layout_marginLeft="@dimen/interval_left"
            android:layout_marginRight="@dimen/interval_right"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_login_button_background"/>
    </LinearLayout>

    <TextView
        android:id="@+id/setting_tv_versions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本号:1.3.0"
        android:textSize="@dimen/text_size2"
        android:textColor="@color/gray_hint"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>