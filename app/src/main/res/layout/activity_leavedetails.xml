<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <include layout="@layout/include_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生:"
            android:textSize="@dimen/text_size3"
            android:textColor="@color/gray_hint"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"/>

        <TextView
            android:id="@+id/leavedetails_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈同学"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size3"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/interval_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程:"
            android:textSize="@dimen/text_size3"
            android:textColor="@color/gray_hint"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"/>

        <TextView
            android:id="@+id/leavedetails_tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="古典音乐"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size3"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/interval_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间:"
            android:textSize="@dimen/text_size3"
            android:textColor="@color/gray_hint"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"/>

        <TextView
            android:id="@+id/leavedetails_tv_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年06月29日 15:40"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size3"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/interval_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间:"
            android:textSize="@dimen/text_size3"
            android:textColor="@color/gray_hint"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"/>

        <TextView
            android:id="@+id/leavedetails_tv_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年06月29日 16:40"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size3"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/interval_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假原因:"
            android:textSize="@dimen/text_size3"
            android:textColor="@color/gray_hint"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"/>

        <TextView
            android:id="@+id/leavedetails_tv_cause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有事"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size3"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/interval_right"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批:"
            android:textSize="@dimen/text_size3"
            android:textColor="@color/gray_hint"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"/>

        <TextView
            android:id="@+id/leavedetails_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已拒绝"
            android:textColor="@color/rer_color"
            android:textSize="@dimen/text_size3"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/interval_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拒绝理由:"
            android:textSize="@dimen/text_size3"
            android:textColor="@color/gray_hint"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"/>

        <TextView
            android:id="@+id/leavedetails_tv_reson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size3"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/interval_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"/>
</LinearLayout>