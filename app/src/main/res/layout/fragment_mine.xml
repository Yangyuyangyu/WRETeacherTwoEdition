<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <include layout="@layout/include_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/background"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mine_rl_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/interval_left">

                    <com.teacherhelp.view.RoundImageView
                        android:id="@+id/mine_img_head"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@mipmap/my_icon_head"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:id="@+id/mine_ll_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/mine_img_head"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mine_tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="用户姓名"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size3" />

                        <TextView
                            android:id="@+id/mine_tv_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:hint="请填写个性签名"
                            android:maxLines="2"
                            android:textColor="@color/gray_hint"
                            android:textSize="@dimen/text_size2" />
                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/mine_rl_businesscard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/app_while_tv_bg"
                        android:paddingBottom="5dp"
                        android:paddingLeft="@dimen/interval_left"
                        android:paddingRight="@dimen/interval_right"
                        android:paddingTop="5dp">

                        <ImageView
                            android:id="@+id/mine_img_businesscard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/my_icon_card" />

                        <TextView
                            android:id="@+id/mine_tv_businesscard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/mine_img_businesscardjiantou"
                            android:layout_toRightOf="@+id/mine_img_businesscard"
                            android:gravity="center_vertical"
                            android:minHeight="40dp"
                            android:text="我的名片"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size3" />

                        <ImageView
                            android:id="@+id/mine_img_businesscardjiantou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/hsjt" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wire"
                        android:layout_marginLeft="@dimen/interval_left"
                        android:background="@color/halving_line_vertical" />

                    <RelativeLayout
                        android:id="@+id/mine_rl_organization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/app_while_tv_bg"
                        android:paddingBottom="5dp"
                        android:paddingLeft="@dimen/interval_left"
                        android:paddingRight="@dimen/interval_right"
                        android:paddingTop="5dp">

                        <ImageView
                            android:id="@+id/mine_img_organization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/my_icon_school" />

                        <TextView
                            android:id="@+id/mine_tv_organization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/mine_img_organizationjiantou"
                            android:layout_toRightOf="@+id/mine_img_organization"
                            android:gravity="center_vertical"
                            android:minHeight="40dp"
                            android:text="我的机构"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size3" />

                        <ImageView
                            android:id="@+id/mine_img_organizationjiantou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/hsjt" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wire"
                        android:layout_marginLeft="@dimen/interval_left"
                        android:background="@color/halving_line_vertical" />

                    <RelativeLayout
                        android:id="@+id/mine_rl_income"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/app_while_tv_bg"
                        android:paddingBottom="5dp"
                        android:paddingLeft="@dimen/interval_left"
                        android:paddingRight="@dimen/interval_right">

                        <ImageView
                            android:id="@+id/mine_img_income"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/my_icon_income" />

                        <TextView
                            android:id="@+id/mine_tv_income"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/mine_img_incomejiantou"
                            android:layout_toRightOf="@+id/mine_img_income"
                            android:gravity="center_vertical"
                            android:minHeight="40dp"
                            android:text="课程统计"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size3" />

                        <ImageView
                            android:id="@+id/mine_img_incomejiantou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/hsjt" />
                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/mine_ll_approve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/app_while_tv_bg"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/interval_left"
                    android:paddingRight="@dimen/interval_right"
                    android:paddingTop="5dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/mine_img_approve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/my_icon_v" />

                        <TextView
                            android:id="@+id/mine_tv_approve"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/mine_img_approvehsjt"
                            android:layout_toRightOf="@+id/mine_img_approve"
                            android:gravity="center_vertical"
                            android:minHeight="40dp"
                            android:text="认证设置"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size3" />

                        <ImageView
                            android:id="@+id/mine_img_approvehsjt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/hsjt" />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/mine_ll_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/app_while_tv_bg"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/interval_left"
                    android:paddingRight="@dimen/interval_right"
                    android:paddingTop="5dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/mine_img_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/my_icon_setting" />

                        <TextView
                            android:id="@+id/mine_tv_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/mine_img_settingjiantou"
                            android:layout_toRightOf="@+id/mine_img_setting"
                            android:gravity="center_vertical"
                            android:minHeight="40dp"
                            android:text="设置"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size3" />

                        <ImageView
                            android:id="@+id/mine_img_settingjiantou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/hsjt" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>