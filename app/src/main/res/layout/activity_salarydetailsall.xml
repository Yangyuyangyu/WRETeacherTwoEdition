<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/include_title"/>

    <TextView
        android:id="@+id/salaryall_tv_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="班级人数:1人"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size3"
        android:background="@drawable/salaryall_bg"
        android:minHeight="40dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:layout_marginTop="20dp"
        android:background="@color/halving_line_vertical"/>

    <include layout="@layout/include_recyclerview"/>
</LinearLayout>