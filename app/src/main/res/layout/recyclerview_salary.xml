<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/salary_rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_while_tv_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:id="@+id/salary_img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/interval_left"
            />

        <TextView
            android:id="@+id/salary_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="古典音乐"
            android:textSize="@dimen/text_size3"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/salary_img_head"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/salary_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23岁"
            android:textColor="@color/rer_color"
            android:textSize="@dimen/text_size2"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/salary_tv_name"
            android:layout_below="@+id/salary_tv_name"/>

        <TextView
            android:id="@+id/salary_tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="古典音乐"
            android:textColor="@color/gray_hint"
            android:textSize="@dimen/text_size2"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/salary_tv_name"
            android:layout_below="@+id/salary_tv_sex"/>

        <TextView
            android:id="@+id/salary_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未考勤"
            android:textColor="@color/rer_color"
            android:textSize="@dimen/text_size3"
            android:layout_below="@+id/salary_img_head"
            android:layout_marginLeft="@dimen/interval_left"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/salary_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-07-24(星期日)"
            android:textColor="@color/gray_hint"
            android:textSize="@dimen/text_size2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/interval_right"/>

        <TextView
            android:id="@+id/salary_tv_timetwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:00~16:00"
            android:textSize="@dimen/text_size2"
            android:textColor="@color/gray_hint"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/salary_tv_time"
            android:layout_marginRight="@dimen/interval_right"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
</LinearLayout>