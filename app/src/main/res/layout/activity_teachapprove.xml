<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/interval_left"
        android:layout_marginRight="@dimen/interval_right"
        android:layout_marginTop="20dp"
        android:text="您的教师证已经成功上传，审核人员将在24小时内审核完毕并发出通知，请耐心等候，谢谢。"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size2" />

    <RelativeLayout
        android:id="@+id/ta_rl_head"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/interval_left"
        android:layout_marginRight="@dimen/interval_right"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ra_rl_head_img"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/text_color3"
            android:gravity="center"
            android:text="上传照片"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size2" />
    </RelativeLayout>
</LinearLayout>