<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include layout="@layout/include_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="声音"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size3"
            android:layout_centerVertical="true"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"
            />

        <com.teacherhelp.view.UISwitchButton
            xmlns:switch="http://schemas.android.com/apk/res-auto"
            android:id="@+id/voice_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            switch:bmHeight="70dp"
            switch:bmWidth="50dp"
            android:layout_marginRight="@dimen/interval_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"
        android:layout_marginLeft="@dimen/interval_left"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="震动"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size3"
            android:layout_centerVertical="true"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"
            />

        <com.teacherhelp.view.UISwitchButton
            xmlns:switch="http://schemas.android.com/apk/res-auto"
            android:id="@+id/shake_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            switch:bmHeight="70dp"
            switch:bmWidth="50dp"
            android:layout_marginRight="@dimen/interval_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"
        android:layout_marginLeft="@dimen/interval_left"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免打扰"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size3"
            android:layout_centerVertical="true"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"
            />

        <com.teacherhelp.view.UISwitchButton
            xmlns:switch="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Nodisturbing_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            switch:bmHeight="70dp"
            switch:bmWidth="50dp"
            android:layout_marginRight="@dimen/interval_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>