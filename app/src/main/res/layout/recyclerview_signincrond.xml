<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">


    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/app_while_tv_bg">

        <ImageView
            android:id="@+id/img_hsjt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/hsjt"
            android:layout_marginRight="@dimen/interval_right"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/interval_left"
            android:layout_toLeftOf="@+id/img_hsjt"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/teach_daka_time_disable_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-07-29 09:46"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size3"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上班"
                android:textSize="@dimen/text_size"
                android:layout_gravity="center_vertical"
                android:textColor="@color/rer_color"
                android:padding="2dp"
                android:background="@drawable/signin_tv_bg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="@dimen/interval_left"
            android:layout_below="@+id/ll_one"
            android:layout_toLeftOf="@+id/img_hsjt"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/teach_daka_location_disable_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="1dp"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="九眼桥校区"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size3"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="1dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"
        />
</LinearLayout>