<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/all_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈同学"
            android:textSize="@dimen/text_size3"
            android:textColor="@color/black"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/interval_left"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/interval_right">

            <Button
                android:id="@+id/all_btn_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="准时"
                android:textColor="@color/gray_hint"
                android:textSize="@dimen/text_size2"
                android:background="@drawable/salary_btn_bg"/>

            <Button
                android:id="@+id/all_btn_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="迟到"
                android:textColor="@color/gray_hint"
                android:textSize="@dimen/text_size2"
                android:background="@drawable/salary_btn_bg"/>

            <Button
                android:id="@+id/all_btn_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="旷课"
                android:textColor="@color/gray_hint"
                android:textSize="@dimen/text_size2"
                android:background="@drawable/salary_btn_bg"/>

            <Button
                android:id="@+id/all_btn_four"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="请假"
                android:textColor="@color/gray_hint"
                android:textSize="@dimen/text_size2"
                android:background="@drawable/salary_btn_bg"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire"
        android:background="@color/halving_line_vertical"/>
</LinearLayout>